# Server Configuration
PORT=5001
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://mongo-service:27017/resq

# Security
JWT_SECRET=your-secure-production-jwt-secret
ENCRYPTION_KEY=your-32-char-prod-encryption-key!!!

# CORS Configuration
CORS_ORIGIN=https://resq-frontend.onrender.com

# Logging
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false

# Production Settings
ENABLE_SWAGGER=false
RATE_LIMIT=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key 